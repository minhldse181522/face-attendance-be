model Notification {
  id BigInt @id @default(autoincrement())

  title        String    @map("title") @db.VarChar(100)
  message      String    @map("message") @db.VarChar(200)
  type         String    @map("type") @db.VarChar(10)
  isRead       Boolean   @default(false) @map("is_read") @db.Boolean
  userCode     String    @map("user_code") @db.VarChar(36)

  createdAt DateTime? @default(now()) @map("created_date") @db.Timestamptz(3)
  createdBy String    @map("created_by") @db.VarChar(36)
  updatedAt DateTime? @updatedAt @map("modified_date") @db.Timestamptz(3)
  updatedBy String?   @map("modified_by") @db.VarChar(36)

  @@map("dt_notification")
}
